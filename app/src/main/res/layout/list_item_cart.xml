<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="cartItem"
            type="com.example.mycashier.data.CartItem" />
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        app:cardElevation="0dp"
        app:contentPadding="8dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Nama Produk -->
            <TextView
                android:id="@+id/text_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="@{cartItem.productName}"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textSize="12sp"
                app:layout_constraintEnd_toStartOf="@id/counter_group"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Nasi Goreng Spesial" />

            <!-- Harga Satuan -->
            <TextView
                android:id="@+id/text_item_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@{String.format(@string/price_format, cartItem.price)}"
                android:textAppearance="?attr/textAppearanceBodySmall"
                android:textColor="@color/black"
                android:textSize="12sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/text_item_name"
                tools:text="Rp 25.000 / item" />

            <!-- Subtotal -->
            <TextView
                android:id="@+id/text_item_subtotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{String.format(@string/price_format, cartItem.subtotal)}"
                android:textAppearance="?attr/textAppearanceBodyMedium"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/counter_group"
                tools:text="Rp 50.000" />


            <!-- Counter Group (Tombol +/-) -->
            <LinearLayout
                android:id="@+id/counter_group"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="4dp">

                <!-- Tombol Kurang -->
                <Button
                    android:id="@+id/button_remove_cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    style="?attr/materialButtonOutlinedStyle"/>

                <!-- Keterangan Jumlah Order -->
                <TextView
                    android:id="@+id/text_cart_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="30dp"
                    android:textAlignment="center"
                    android:text="@{String.valueOf(cartItem.quantity)}"
                    tools:text="2" />

                <!-- Tombol Tambah -->
                <Button
                    android:id="@+id/button_add_cart"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    style="?attr/materialButtonStyle"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
