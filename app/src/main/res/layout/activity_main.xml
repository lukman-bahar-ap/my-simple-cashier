<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.mycashier.KasirViewModel" />
        <!-- Import View untuk visibility -->
        <import type="android.view.View" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <!-- Label Produk -->
        <TextView
            android:id="@+id/label_products"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="#D9D9D9"
            android:paddingStart="16dp"
            android:paddingTop="16dp"
            android:paddingBottom="16dp"
            android:text="PILIH PRODUK"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Input Pencarian Menu (Baru Ditambahkan) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/search_input_layout"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:hint="Cari Menu..."
            app:startIconDrawable="@drawable/baseline_search_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_products">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_search"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:inputType="textCapWords" />
        </com.google.android.material.textfield.TextInputLayout>

        <!-- RecyclerView untuk pemilihan produk (Sekarang di bawah input pencarian) -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler_product_selection"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/shape_rounded_border"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/search_input_layout"
            tools:listitem="@layout/list_item_menu" />

        <!-- Floating Action Button untuk navigasi ke Keranjang -->
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_cart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:contentDescription="Keranjang Belanja"
            app:layout_constraintBaseline_toTopOf="@+id/label_products"
            app:layout_constraintEnd_toEndOf="@id/label_products"
            app:layout_constraintRight_toRightOf="@id/label_products"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_cart"
            app:tint="@color/black"
            app:backgroundTint="@android:color/transparent"
            app:elevation="0dp"
            app:borderWidth="0dp"
            app:pressedTranslationZ="0dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
