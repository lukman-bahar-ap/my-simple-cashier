<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.example.mycashier.KasirViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:context=".ui.payment.PaymentActivity">

        <Button
            android:id="@+id/button_customer_info"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="BERI NAMA PELANGGAN ?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Header Total Pembayaran -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_summary"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorPrimary"
            app:cardCornerRadius="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_customer_info">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#BAF0EB"
                android:orientation="horizontal"
                android:padding="16dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TOTAL"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/text_final_total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{String.format(@string/price_format, viewModel.totalAmount)}"
                    android:textAppearance="?attr/textAppearanceTitleLarge"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="Rp 150.000.000.000" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Pilihan Metode Pembayaran -->
        <TextView
            android:id="@+id/label_method"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="PILIH METODE PEMBAYARAN"
            android:textSize="12sp"
            android:textAppearance="?attr/textAppearanceTitleMedium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/card_summary" />

        <RadioGroup
            android:id="@+id/radio_group_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/label_method">


            <RadioButton
                android:id="@+id/radio_cash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:checked="true"
                android:drawableStart="@drawable/ic_cash"
                android:drawablePadding="16dp"
                android:padding="16dp"
                android:text="Tunai (Cash)"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textSize="12sp"
                app:buttonTint="?attr/colorPrimary" />


                <RadioButton
                    android:id="@+id/radio_transfer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:textSize="12sp"
                    android:text="Transfer Bank (Virtual Account)"
                    android:textAppearance="?attr/textAppearanceBodyLarge"
                    app:buttonTint="?attr/colorPrimary"
                    android:drawableStart="@drawable/ic_drink"
                    android:drawablePadding="16dp"/>

            <RadioButton
                android:id="@+id/radio_qris"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_qris"
                android:drawablePadding="16dp"
                android:padding="16dp"
                android:text="QRIS (E-Wallet)"
                android:textAppearance="?attr/textAppearanceBodyLarge"
                android:textSize="12sp"
                app:buttonTint="?attr/colorPrimary" />

        </RadioGroup>

        <!-- Tombol Proses Pembayaran -->
        <Button
            android:id="@+id/button_process_payment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PROSES PEMBAYARAN"
            android:enabled="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
